<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.MainPage"
             BackgroundColor="#595BBC">

    <Grid RowDefinitions="Auto, *, Auto" Padding="30">

        <!-- Top Title -->
        <Label Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <!-- Middle Button -->
        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Find something to watch"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="30"
                    CornerRadius="20"
                    HeightRequest="100"
                    WidthRequest="400"
                    Clicked="OnFindButtonClicked"/>
        </VerticalStackLayout>

        <!-- Bottom Icons -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,30,0,0">
            <ImageButton Grid.Column="0"
                         Source="bookmark.png"
                         WidthRequest="60"
                         HeightRequest="60"
                         BackgroundColor="Transparent"
                         Clicked="OnSavedFilmsClicked"/>

            <Label Grid.Column="1"/>

            <ImageButton Grid.Column="2"
                         Source="settings.png"
                         WidthRequest="60"
                         HeightRequest="60"
                         BackgroundColor="Transparent"
                         Clicked="OnSettingsClicked"/>
        </Grid>
    </Grid>
</ContentPage>
