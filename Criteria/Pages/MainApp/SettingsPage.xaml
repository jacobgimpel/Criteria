<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.SettingsPage"
             Style="{DynamicResource PageStyle}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="30">

        <!-- Title -->
        <Label Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               Style="{DynamicResource TitleLabelStyle}"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />

        <!-- Buttons Stack -->
        <VerticalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center">
            <Button Text="About"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    WidthRequest="200"
                    HeightRequest="50"
                    Clicked="OnAboutClicked"/>

            <Button Text="Reset Preferences"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    WidthRequest="200"
                    HeightRequest="50"
                    Clicked="OnResetPreferencesClicked"/>

            <Grid WidthRequest="200" HeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="Dark Mode"
               VerticalOptions="Center"
               Style="{DynamicResource TitleLabelStyle}" />

                <Switch x:Name="DarkModeSwitch"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Center"
                IsToggled="{Binding IsDarkModeEnabled}"
                Toggled="OnDarkModeToggled"/>
            </Grid>

        </VerticalStackLayout>

        <!-- Home Button -->
        <ImageButton Grid.Row="2"
                     Source="home.png"
                     Style="{DynamicResource IconButtonStyle}"
                     HeightRequest="60"
                     WidthRequest="60"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     SemanticProperties.Hint="Return to home screen"
                     Clicked="OnHomeClicked"/>
    </Grid>
</ContentPage>
