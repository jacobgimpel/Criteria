<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.SavedFilms"
             BackgroundColor="#595BBC">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">

        <!-- Top Logo -->
        <StackLayout Grid.Row="0" HorizontalOptions="Center">
            <Label Text="Criteria."
                   FontFamily="Lateef"
                   FontSize="60"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />
        </StackLayout>


        <!-- Scrollable Movie Grid -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="SavedFilmsCollection"
                            ItemsLayout="VerticalGrid, 2"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">

                            <!-- Poster -->
                            <Frame HasShadow="False"
                                   BorderColor="Transparent"
                                   BackgroundColor="Transparent"
                                   HeightRequest="250"
                                   WidthRequest="170">
                                <Grid>

                                    <Image Source="{Binding PosterPath}"
                                           Aspect="AspectFill"/>

                                    <!-- Overlay for synopsis -->
                                    <Grid x:Name="Overlay"
                                          BackgroundColor="Black"
                                          Opacity="0"
                                          IsVisible="False">

                                        <Label Text="{Binding Overview}"
                                               TextColor="White"
                                               Padding="12"
                                               FontSize="14"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center" />
                                    </Grid>

                                </Grid>
                            </Frame>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </ScrollView>


        <!-- Home Button -->
        <ImageButton Grid.Row="2"
                Source="home.png"
                CornerRadius="20"
                HeightRequest="60"
                Margin="0,10,0,0"/>

    </Grid>
</ContentPage>
