<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.AboutPage"
             Title="About"
             Style="{DynamicResource PageStyle}"
             Padding="20">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Title -->
        <Label Grid.Row="0"
               Text="About Criteria"
               FontFamily="Lateef"
               FontSize="50"
               FontAttributes="Bold"
               Style="{DynamicResource TitleLabelStyle}"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <!-- About Text -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <Label Text="Criteria is an open source application developed using .NET MAUI that makes use of the TMDB API."
                   FontSize="18"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="VersionLabel"
                   FontSize="18"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Spacer -->
        <BoxView Grid.Row="2" HeightRequest="10" BackgroundColor="Transparent"/>

        <!-- Home Button -->
        <ImageButton Grid.Row="3"
                     Source="home.png"
                     CornerRadius="20"
                     HeightRequest="60"
                     WidthRequest="60"
                     Style="{DynamicResource IconButtonStyle}"
                     Clicked="OnHomeClicked"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     SemanticProperties.Hint="Return to home screen"/>
    </Grid>
</ContentPage>
