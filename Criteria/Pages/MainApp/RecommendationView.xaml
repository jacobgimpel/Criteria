<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.RecommendationView"
             BackgroundColor="#595BBC">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20">

        <!-- Main App Title -->
        <Label Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <!-- Instructions -->
        <VerticalStackLayout Grid.Row="1" Spacing="5" HorizontalOptions="Center">
            <Label Text="Swipe left or right to navigate"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
            <Label Text="Tap on the poster to view more information"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Carousel + Overlay + Title -->
        <Grid Grid.Row="2">
            <CarouselView x:Name="RecommendationsCarousel"
                          IndicatorView="carouselIndicators"
                          HorizontalOptions="Fill"
                          VerticalOptions="Fill"
                          Margin="0,10,0,10">

                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="450" WidthRequest="300">

                            <!-- Poster Image -->
                            <Image Source="{Binding PosterPath}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnPosterTapped"/>
                                </Image.GestureRecognizers>
                            </Image>

                            <!-- Overlay (Synopsis) -->
                            <Grid x:Name="Overlay"
                                  BackgroundColor="#AA000000"
                                  IsVisible="False"
                                  Opacity="0">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                                </Grid.GestureRecognizers>
                                <ScrollView InputTransparent="True">
                                    <Label Text="{Binding Overview}"
                                           TextColor="White"
                                           Padding="15"
                                           FontSize="14"
                                           LineBreakMode="WordWrap"/>
                                </ScrollView>
                            </Grid>

                            <!-- Movie Title at Bottom -->
                            <Label Text="{Binding Title}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   BackgroundColor="#AAFFFFFF"
                                   Padding="5"
                                   Margin="0,0,0,10"/>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Indicator Dots -->
            <IndicatorView x:Name="carouselIndicators"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="Black"
                           Margin="0,0,0,0"/>
        </Grid>

        <!-- Footer Buttons -->
        <Grid Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,20,0,0"
              VerticalOptions="End">

            <!-- Saved Films -->
            <ImageButton Grid.Column="0"
                         Source="bookmark.png"
                         HeightRequest="60"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start"
                         Clicked="OnSavedFilmsClicked"/>

            <!-- Save Button -->
            <Button Grid.Column="1"
                    Text="Save"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="30"
                    BackgroundColor="#E0E0E0"
                    CornerRadius="20"
                    HeightRequest="80"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Clicked="OnSaveButtonClicked"/>

            <!-- Home -->
            <ImageButton Grid.Column="2"
                         Source="home.png"
                         HeightRequest="60"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         Clicked="OnHomeClicked"/>
        </Grid>

    </Grid>
</ContentPage>
