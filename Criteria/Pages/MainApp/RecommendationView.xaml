<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.RecommendationView"
             BackgroundColor="#595BBC">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="30">

        <!-- Title Centred at Top -->
        <Label Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />

        <!-- Instruction Text -->
        <VerticalStackLayout Grid.Row="1" Spacing="5" HorizontalOptions="Center">
            <Label Text="Swipe left or right to navigate"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center" />
            <Label Text="Tap on the poster to view more information"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Carousel of movie posters -->
        <CarouselView x:Name="RecommendationsCarousel"
                      Grid.Row="2"
                      IndicatorView="carouselIndicators"
                      HorizontalOptions="Fill"
                      VerticalOptions="Fill"
                      Margin="0,20,0,20">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding PosterPath}"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="400"
                               WidthRequest="300">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPosterTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Carousel indicator dots -->
        <IndicatorView x:Name="carouselIndicators"
                       Grid.Row="2"
                       VerticalOptions="End"
                       HorizontalOptions="Center"
                       IndicatorColor="LightGray"
                       SelectedIndicatorColor="Black"
                       Margin="0,0,0,120" />

        <Grid Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,30,0,0"
              VerticalOptions="End"
              HorizontalOptions="Fill">

            <!-- Saved Films Icon -->
            <ImageButton
                Grid.Column="0"
                Source="bookmark.png"
                WidthRequest="60"
                HeightRequest="60"
                BackgroundColor="Transparent"
                Clicked="OnBookmarkClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                SemanticProperties.Hint="View saved films" />

            <!-- Save Button -->
            <Button
                Grid.Column="1"
                x:Name="SaveButton"
                Text="Save"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="30"
                BackgroundColor="#E0E0E0"
                CornerRadius="20"
                HeightRequest="100"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Clicked="OnSaveButtonClicked" />

            <!-- Home Icon -->
            <ImageButton
                Grid.Column="2"
                Source="home.png"
                WidthRequest="60"
                HeightRequest="60"
                BackgroundColor="Transparent"
                Clicked="OnHomeClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                SemanticProperties.Hint="Return to home screen" />
        </Grid>
    </Grid>

</ContentPage>
