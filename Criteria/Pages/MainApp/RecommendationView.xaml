<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.MainApp.RecommendationView"
             Style="{DynamicResource PageStyle}">
    
    <Grid x:Name="MainGrid" RowDefinitions="Auto,Auto,*,Auto" Padding="20">
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="AppTitle" Property="IsVisible" Value="True" />
                        <Setter TargetName="InstructionsStack" Property="IsVisible" Value="True" />
                        <Setter TargetName="PortraitCarousel" Property="IsVisible" Value="True" />
                        <Setter TargetName="FooterGrid" Property="IsVisible" Value="True" />
                        <Setter TargetName="LandscapeGrid" Property="IsVisible" Value="False" />
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="AppTitle" Property="IsVisible" Value="False" />
                        <Setter TargetName="InstructionsStack" Property="IsVisible" Value="False" />
                        <Setter TargetName="PortraitCarousel" Property="IsVisible" Value="False" />
                        <Setter TargetName="FooterGrid" Property="IsVisible" Value="False" />
                        <Setter TargetName="LandscapeGrid" Property="IsVisible" Value="True" />
                    </VisualState.Setters>
                </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <Label x:Name="AppTitle"
               Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               Style="{DynamicResource TitleLabelStyle}"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>
        
        <VerticalStackLayout x:Name="InstructionsStack"
                             Grid.Row="1" Spacing="5" HorizontalOptions="Center">
            <Label Text="Swipe left or right to navigate"
                   FontSize="18"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center"/>
            <Label Text="Tap on the poster to view more information"
                   FontSize="18"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
        
        <Grid x:Name="ContentGrid" Grid.Row="2">
            
            <CarouselView x:Name="PortraitCarousel"
                          IndicatorView="carouselIndicators"
                          HorizontalOptions="Fill"
                          VerticalOptions="Fill"
                          Margin="0,10,0,10">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="450" WidthRequest="300">
                            
                            <Image Source="{Binding PosterPath}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnPosterTapped"/>
                                </Image.GestureRecognizers>
                            </Image>
                            
                            <Grid x:Name="Overlay"
                                  BackgroundColor="{DynamicResource OverlayBackgroundColor}"
                                  IsVisible="False"
                                  Opacity="0">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                                </Grid.GestureRecognizers>
                                <ScrollView InputTransparent="True">
                                    <Label Text="{Binding Overview}"
                                           Style="{DynamicResource OverlayLabelStyle}"
                                           Padding="15"
                                           FontSize="14"
                                           LineBreakMode="WordWrap"/>
                                </ScrollView>
                            </Grid>
                            
                            <Label Text="{Binding Title}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   Style="{DynamicResource MovieTitleLabelStyle}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Padding="5"
                                   Margin="0,0,0,10"/>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            
            <Grid x:Name="LandscapeGrid" ColumnDefinitions="*,*" RowDefinitions="*">
                
                <CarouselView x:Name="LandscapeCarousel"
                              ItemsSource="{Binding _recommendedMovies}"
                              HorizontalOptions="Fill"
                              VerticalOptions="Fill"
                              PositionChanged="LandscapeCarousel_PositionChanged">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding PosterPath}" Aspect="AspectFit"/>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                
                <Grid Grid.Column="1" Padding="10" RowDefinitions="*, Auto">
                    <ScrollView Grid.Row="0" HeightRequest="180">
                        <Label x:Name="LandscapeSynopsis"
                               Style="{DynamicResource OverlayLabelStyle}"
                               Text=""
                               FontSize="16"
                               LineBreakMode="WordWrap"/>
                    </ScrollView>
                    <Button x:Name="LandscapeSaveButton"
                            Grid.Row="1"
                            Text="Save"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            FontAttributes="Bold"
                            FontSize="22"
                            CornerRadius="15"
                            HeightRequest="60"
                            Clicked="OnSaveButtonClicked"/>
                </Grid>
            </Grid>
            
            <IndicatorView x:Name="carouselIndicators"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           IndicatorColor="{DynamicResource IndicatorColor}"
                           SelectedIndicatorColor="{DynamicResource SelectedIndicatorColor}"
                           Margin="0,0,0,0"/>
        </Grid>
        
        <Grid x:Name="FooterGrid"
              Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,20,0,0"
              VerticalOptions="End">
            <ImageButton x:Name="SavedFilmsButton"
                         Grid.Column="0"
                         Source="bookmark.png"
                         Style="{DynamicResource IconButtonStyle}"
                         HeightRequest="60"
                         HorizontalOptions="Start"
                         Clicked="OnSavedFilmsClicked"/>
            
            <Button x:Name="SaveButton"
                    Grid.Column="1"
                    Text="Save"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    FontAttributes="Bold"
                    FontSize="30"
                    CornerRadius="20"
                    HeightRequest="80"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Clicked="OnSaveButtonClicked"/>
            
            <ImageButton x:Name="HomeButton"
                         Grid.Column="2"
                         Source="home.png"
                         Style="{DynamicResource IconButtonStyle}"
                         HeightRequest="60"
                         HorizontalOptions="End"
                         Clicked="OnHomeClicked"/>
        </Grid>
    </Grid>
</ContentPage>