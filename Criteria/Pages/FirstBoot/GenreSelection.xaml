<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.FirstBoot.GenreSelectionPage"
             BackgroundColor="#595BBC">

<Grid Padding="30" RowDefinitions="Auto, *, Auto">

        <!-- Title Section -->
        <VerticalStackLayout Grid.Row="0" Spacing="8" HorizontalOptions="Center">
            <Label Text="Criteria."
                   FontFamily="Lateef"
                   FontSize="60"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />
            <Label Text="So, what do you like to watch?"
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>
            <Label Text="Select as many genres as you like (minimum 1):"
                   FontSize="15"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>
        </VerticalStackLayout>

        <!-- Genre Buttons Section -->
        <Grid Grid.Row="1" ColumnDefinitions="*, *" ColumnSpacing="20" Margin="0,60,0,0">

            <!-- Left Column -->
            <VerticalStackLayout Spacing="40">
                <Button Text="Action"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Comedy"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Drama"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Horror"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Romance"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Thriller"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
            </VerticalStackLayout>

            <!-- Right Column -->
            <VerticalStackLayout Spacing="40" Grid.Column="1">
                <Button Text="Sci-Fi"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Fantasy"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Documentary"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Animation"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Mystery"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
                <Button Text="Adventure"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnGenreButtonClicked"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Continue Button -->
        <Button Grid.Row="2"
                x:Name="ContinueButton"
                Text="Continue"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="30"
                BackgroundColor="#E0E0E0"
                CornerRadius="20"
                HeightRequest="100"
                Margin="0,30,0,0"
                IsEnabled="False"
                MaximumWidthRequest="300"
                Clicked="OnContinueButtonClicked"/>
    </Grid>
</ContentPage>
