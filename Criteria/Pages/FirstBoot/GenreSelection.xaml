<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.FirstBoot.GenreSelectionPage"
             Style="{DynamicResource PageStyle}"
             Padding="20"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Title Section -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Criteria."
                       FontFamily="Lateef"
                       FontSize="48"
                       FontAttributes="Bold"
                       Style="{DynamicResource TitleLabelStyle}"
                       HorizontalOptions="Center" />
                <Label Text="So, what do you like to watch?"
                       FontSize="18"
                       Style="{DynamicResource InstructionLabelStyle}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Select as many genres as you like (minimum 1):"
                       FontSize="14"
                       Style="{DynamicResource InstructionLabelStyle}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Genre Buttons -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="15" RowSpacing="15">
                <VerticalStackLayout Spacing="15">
                    <Button Text="Action" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Comedy" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Drama" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Horror" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Romance" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Thriller" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="15" Grid.Column="1">
                    <Button Text="Sci-Fi" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Fantasy" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Documentary" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Animation" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Mystery" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                    <Button Text="Adventure" Style="{DynamicResource PrimaryButtonStyle}" Clicked="OnGenreButtonClicked"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Continue Button -->
            <Button x:Name="ContinueButton"
                    Text="Continue"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    FontAttributes="Bold"
                    FontSize="24"
                    CornerRadius="20"
                    HeightRequest="60"
                    IsEnabled="False"
                    Clicked="OnContinueButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
