<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.FirstBoot.FilmSelectionPage"
             BackgroundColor="#595BBC">

    <Grid Padding="15" RowDefinitions="Auto, *, Auto, Auto">

        <!-- Titles + Search -->
        <VerticalStackLayout Grid.Row="0" Spacing="4" HorizontalOptions="Center">
            <Label Text="Criteria."
                   FontFamily="Lateef"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <Label Text="What are some of your favourite films?"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <Label Text="Search for and select 6:"
                   FontSize="14"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <Label x:Name="CounterLabel"
                   Text="0/6 Selected"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <SearchBar x:Name="SearchBar"
                       Placeholder="Search for a movie"
                       BackgroundColor="#dddddd"
                       FontSize="14"
                       HeightRequest="45"/>
        </VerticalStackLayout>

        <!-- Search Results -->
        <ScrollView Grid.Row="1" Margin="0,10,0,10">
            <Grid x:Name="SearchResultsGrid"
                  RowSpacing="12"
                  ColumnSpacing="12"
                  Padding="5"/>
        </ScrollView>

        <!-- Selected Movies -->
        <ScrollView Grid.Row="2" Orientation="Horizontal" HeightRequest="110">
            <HorizontalStackLayout x:Name="SelectedMoviesLayout"
                                   Spacing="10"
                                   Padding="5"/>
        </ScrollView>

        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="3" HorizontalOptions="Center" Spacing="20" Padding="5">
            <ImageButton Source="plus_circle.png"
                         BackgroundColor="Transparent"
                         WidthRequest="60"
                         HeightRequest="60"
                         Clicked="OnAddButtonClicked"/>

            <Button x:Name="ContinueButton"
                    Text="Continue"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="20"
                    BackgroundColor="#E0E0E0"
                    CornerRadius="14"
                    HeightRequest="60"
                    WidthRequest="180"
                    IsEnabled="False"
                    Clicked="OnContinueButtonClicked"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
