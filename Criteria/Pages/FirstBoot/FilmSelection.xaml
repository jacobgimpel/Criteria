<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.FirstBoot.FilmSelectionPage"
             BackgroundColor="#595BBC">

    <!-- Define rows to organize layout properly -->
    <Grid Padding="30" RowDefinitions="Auto, *, Auto, Auto">

        <!--Title Selection and Searchbar-->
        <VerticalStackLayout Grid.Row="0" Spacing="8" HorizontalOptions="Center">
            <Label Text="Criteria."
                   FontFamily="Lateef"
                   FontSize="60"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />
            <Label Text="What are some of your favourite films?"
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>
            <Label Text="Search for and select 6:"
                   FontSize="15"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>
            <Label x:Name="CounterLabel"
                   Text="0/6 Selected"
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>
            <SearchBar x:Name="SearchBar"
                       Placeholder="Search for a movie"
                       BackgroundColor="Grey"/>
        </VerticalStackLayout>

        <!-- Search results -->
        <ScrollView Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">
            <Grid x:Name="SearchResultsGrid" RowSpacing="10" ColumnSpacing="10"/>
        </ScrollView>

        <!-- Selected movies -->
        <ScrollView Grid.Row="2" Orientation="Horizontal" HeightRequest="120" HorizontalScrollBarVisibility="Always" Margin="0,10,0,10">
            <HorizontalStackLayout x:Name="SelectedMoviesLayout" Spacing="10"/>
        </ScrollView>

        <!-- Add and Continue -->
        <HorizontalStackLayout Grid.Row="3" HorizontalOptions="Center" Spacing="30">
            <ImageButton Source="plus_circle.png"
                         BackgroundColor="Transparent"
                         WidthRequest="80"
                         HeightRequest="80"
                         Clicked="OnAddButtonClicked"/>
            <Button x:Name="ContinueButton"
                    Text="Continue"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="30"
                    BackgroundColor="#E0E0E0"
                    CornerRadius="20"
                    HeightRequest="100"
                    WidthRequest="250"
                    IsEnabled="False"
                    Clicked="OnContinueButtonClicked"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
