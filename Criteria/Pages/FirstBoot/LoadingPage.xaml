<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Criteria.Pages.FirstBoot.LoadingPage"
             Style="{DynamicResource PageStyle}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="30">

        <!-- Title centered at top -->
        <Label Grid.Row="0"
               Text="Criteria."
               FontFamily="Lateef"
               FontSize="60"
               FontAttributes="Bold"
               Style="{DynamicResource TitleLabelStyle}"
               HorizontalOptions="Center" />

        <!-- Centered Loading Text in middle -->
        <VerticalStackLayout Grid.Row="1"
            HorizontalOptions="Center" 
            VerticalOptions="Center"
            Spacing="4">
            <Label Text="Let's find you something to watch."
                   FontSize="18"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center" />
            <Label Text="Please wait"
                   FontSize="16"
                   Style="{DynamicResource InstructionLabelStyle}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
